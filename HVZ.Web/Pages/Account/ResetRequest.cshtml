@page
@using Microsoft.AspNetCore.Components.Web
@model HVZ.Web.Pages.ResetRequestPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="css/site.css" rel="stylesheet" />
    <link href="HVZ.Web.styles.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/168d40dd96.js" crossorigin="anonymous"></script>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<title>Reset Password</title>
<body class="pt-5">
    <div class="container align-middle">
        @if (Model.emailSent == false)
        {
            <div class="row">
                <h1 class="text-center">Request Password Reset</h1>
                
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="ResetRequestModelProperty.Email" type="email" class="form-control" placeholder="name@example.com">
                            <label for="floatingEmail">Email</label>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button class="btn btn-primary btn-block" type="submit">Send</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        }
        @if (Model.emailSent == true)
        {
            <h2 class="text-center">Success! Please check your email.</h2>
        }
    </div>
    <script src="js/theme.js"></script>
    
</body>
<script src="_framework/blazor.server.js"></script>