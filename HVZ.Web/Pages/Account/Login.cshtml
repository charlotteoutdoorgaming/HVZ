
@page
@using Microsoft.AspNetCore.Components.Web
@model HVZ.Web.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap-dark.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="HVZ.Web.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>

<title class="mb-3">Login</title>

<body class="pt-5">
    <div class="container align-middle">
        <div class="row">
            <h1 class="text-center">Login</h1>
            
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <ul class="nav nav-pills">
                    <li class="nav-item col-6">
                        <a href="/Account/Login" class="nav-link active text-center">Login</a>
                    </li>
                    <li class="nav-item col-6">
                        <a href="/Account/Register" class="nav-link text-center">Sign up</a>
                    </li>
                </ul>
                <form method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="UserModel.Email" type="email" class="form-control" placeholder="name@example.com">
                        <label for="floatingEmail">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserModel.Password" class="form-control" placeholder="Password">
                        <label for="floatingPass">Password</label>
                    </div>

                    <div class="form-check form-switch">
                        <input asp-for="UserModel.RememberMe" class="form-check-input" id="remember">
                        <label for="remember" class="form-check-label mb-3">Remember me</label>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button class="btn btn-primary btn-block" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <a class="text-center" href="/Account/ResetRequest">Forgot my password</a>
            </div>
        </div>
    </div>

    
</body>
<script src="_framework/blazor.server.js"></script>