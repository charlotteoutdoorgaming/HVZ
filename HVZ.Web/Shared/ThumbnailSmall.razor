@using HVZ.Web.Services
@inject ImageService ImageService

<img src="@ImageService.GetThumbnailSmall(Id)" onerror="this.src='images/default_user_thumbnail_small.jpeg'" style="@style" alt="">

@code
{
    [Parameter]
    public string Id { get; set; } = "";

    [Parameter]
    public string style { get; set; } = "";
}