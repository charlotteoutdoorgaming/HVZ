@model HVZ.Web.Server.Pages.Account.ResetModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Reset password</title>
    <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <style>
        body {
            margin: 0px;
            padding: 0px;
        }
    </style>
    <script>
        function toggleViewPassword(id) {
            // Button Icon
            // Text input
            const input = document.getElementById(id);
            const inputIcon = document.getElementById(id + "-icon");
            const inputType = input.getAttribute("type");
            input.setAttribute("type", inputType=="password"?"text":"password");
            inputIcon.innerHTML=inputType=="password"?"visibility":"visibility_off";
        }
    </script>
</head>

<body class="mdc-theme--background mdc-typography">
    <header class="mdc-top-app-bar mdc-top-app-bar--fixed" data-mdc-auto-init="MDCTopAppBar">
        <div class="mdc-top-app-bar__row">
            <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
                <span class="mdc-top-app-bar__title">PlayHVZ</span>
            </section>
        </div>
    </header>
    <main class="mdc-top-app-bar--fixed-adjust">
        <div style="margin:16px;">
            <div class="mdc-card mdc-card--outlined">
                <div class="mdc-card__content" style="margin:16px;">
                    <h4 class="mdc-typography--headline4">Reset password</h4>
                    <form method="post">
                        <label class="mdc-text-field mdc-text-field--filled mdc-text-field--with-trailing-icon" style="width:100%;" data-mdc-auto-init="MDCTextField">
                            <span class="mdc-text-field__ripple"></span>
                            <span class="mdc-floating-label">New Password</span>
                            @Html.TextBoxFor(model => model.RequestModel.Password, null, new { @id="password", @type = "password", @class = "mdc-text-field__input"})
                            <button class="mdc-button" type="button" onclick="toggleViewPassword('password')">
                                <i id="password-icon" class="material-icons mdc-text-field__icon mdc-text-field__icon--trailing">visibility_off</i>
                            </button>
                            <span class="mdc-line-ripple"></span>
                        </label>
                        <span class="mdc-typography-body2 mdc-theme--error" asp-validation-for="RequestModel.Password"></span>
                        <label class="mdc-text-field mdc-text-field--filled mdc-text-field--with-trailing-icon" style="width:100%;margin-top:8px" data-mdc-auto-init="MDCTextField">
                            <span class="mdc-text-field__ripple"></span>
                            <span class="mdc-floating-label">Confirm Password</span>
                            @* <input asp-for="RequestModel.ConfirmPassword" class="mdc-text-field__input" type="password" aria-labelledby="my-label-id"> *@
                            @Html.TextBoxFor(model => model.RequestModel.ConfirmPassword, null, new { @id="confirm-password", @type = "password", @class = "mdc-text-field__input"})
                            <button class="mdc-button" type="button" onclick="toggleViewPassword('confirm-password')">
                                <i id="confirm-password-icon" class="material-icons mdc-text-field__icon mdc-text-field__icon--trailing">visibility_off</i>
                            </button>
                            <span class="mdc-line-ripple"></span>

                        </label>
                        <span class="mdc-typography-body2 mdc-theme--error" asp-validation-for="RequestModel.ConfirmPassword"></span>
                        <div class="mdc-card__actions" style="flex-direction: row-reverse!important;">
                            <div class="mdc-card__action">
                                <button type="submit" class="mdc-button mdc-button--raised" style="margin-top:8px;" data-mdc-auto-init="MDCRipple">
                                    <span class="mdc-button__label">Submit</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>

<script type="module">
    mdc.autoInit();
</script>